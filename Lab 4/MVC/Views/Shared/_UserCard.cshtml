@model MVC.Models.User

<div class="card">
    <div class="card-body">
        <div class="image mb-2">
            <img class="rounded-circle" width="150" src="@Model.Image" alt="@Html.DisplayNameFor(model => model.Image)">
        </div>
        <div class="h5">@Model.FullName</div>
        <div >
            <span class="h7 text-muted">@@@Model.UserNsme</span>
            <button class="btn btn-primary btn-sm ml-3" type="button">Follow</button>
        </div>
        <div class="h7">
            @Model.Biography
        </div>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <div class="h6 text-muted">@Html.DisplayNameFor(model => model.Followers)</div>
            <div class="h5">@(Model.Followers?.Count ?? 0)</div>
        </li>
        <li class="list-group-item">
            <div class="h6 text-muted">@Html.DisplayNameFor(model => model.Following)</div>
            <div class="h5">@(Model.Following?.Count ?? 0)</div>
        </li>
    </ul>
</div>